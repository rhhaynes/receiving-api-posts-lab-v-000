<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<h3 class="productName"></h3>
<p class="productPrice"></p>
<p class="productDescription"></p>

<script>
$(function(){
  $('form').on('submit',function(e){
    e.preventDefault();
    const values  = $(this).serialize();
    const posting = $.post('', values)
    posting.done();
  });
});
</script>
